<%- include('../layouts/users/header', { title: 'Ellora Store', path: '/wishlist',userId:userId,wishlistData:wishlistData,cartData:cartData }) %>
    <style>
        .swal2-cancel.cancel-button-class {
    color: #333;
    background-color: transparent; 
    border-style: solid;
    border-width: 1px;
    border-color: #c96;
}
.swal2-confirm.confirm-button-class { 
    border-style: solid;
    border-width: 1px;
    border-color: #c96;
}
    </style>

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Wishlist<span>Shop</span></h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/products">Products</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="container">
                    <%  if(wishlistData && wishlistData.products.length>0){ %>
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th>Stock Status</th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
                            <% wishlistData.products.forEach((value,index)=>{%>
                             
							<tr id="wishlistDelete<%= index %>">
                                <input type="hidden" name="productId" value="<%= value.productId %>">
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="<%= value.productId.image[0].url %>" alt="Product image">
											</a>
										</figure>

										<h3 class="product-title">
											<a href="#"><%= value.productId.name %></a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col">Rs.<%= value.productPrice %></td>
                                    <% if(value.productId.stock >0){%>
                                        <td class="stock-col"><span class="in-stock">In stock</span></td>
                                        <td class="action-col">
                                            <button  onclick="addtoCart('<%=value.productId._id%>')" class="btn btn-block btn-outline-primary-2"><i class="icon-cart-plus"></i>Add to Cart</button>
                                        </td>
                                    <%}else{%>
                                        <td class="stock-col"><span class="out-of-stock">Out of stock</span></td>
                                        <td class="action-col">
                                            <button class="btn btn-block btn-outline-primary-2 disabled">Out of Stock</button>
                                        </td>
                                     <%} %>
                                    
								<td class="remove-col"><button class="btn-remove" onclick="deleteWishlistItem('<%= index %>','<%= value.productId._id %>')"><i class="icon-close"></i></button></td>
							</tr>
                            <%}) %>
						</tbody>
					</table><!-- End .table table-wishlist -->
                    <% }else{%>
                        <h3 class="summary-title">Your Wishlist is empty</h3>

                        <% } %>
	            	<div class="wishlist-share">
	            		<div class="social-icons social-icons-sm mb-2">
	            			<label class="social-label">Share on:</label>
	    					<a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
	    					<a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
	    					<a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
	    					<a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
	    					<a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
	    				</div><!-- End .soial-icons -->
	            	</div><!-- End .wishlist-share -->
            	</div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

        
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function deleteWishlistItem(index, productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!',
                cancelButtonText: 'No, keep it'
            }).then((result) => {
                if (result.isConfirmed) {
                    const element = document.getElementById(`wishlistDelete${index}`);
                    element.remove();
                    axios.post('/deleteWishlistItem', { productId: productId })
                        .then(function(response) {
                            console.log(response.data);
                            if (response.data.success) {
                                Swal.fire({
                                    position: "center",
                                    title: "Removed!",
                                    text: "Item has been removed from the wishlist.",
                                    icon: "success",
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Failed!",
                                    text: response.data.message,
                                    confirmButtonColor: "#3085d6"
                                });
                            }
                        }).catch(function(error) {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: "error",
                                title: "Error!",
                                text: "An error occurred. Please try again later.",
                                confirmButtonColor: "#3085d6"
                            });
                        });
                }
            });
        }
    </script>
    
     <script>
        async function addtoCart (productId){
            console.log('pro',productId);
          productQuantity = 1;
              axios.post('/addcart', { productQuantity,productId })
                  .then(function(response){
                      console.log(response.data);
                      if (response.data.login) {
                          Swal.fire({
                              icon: "warning",
                              title: "Please Login",
                              confirmButtonColor: "#c96",
                              confirmButtonText: "Login",
                              showCancelButton: true,
                              cancelButtonColor: "#d33",
                              text: response.data.message,
                          }).then((result) => {
                              if (result.isConfirmed) {
                                  window.location.href = "/login";
                              }
                          });
                      } else if (response.data.success == true) {
                          Swal.fire({
                              position: "center",
                              title: "Success!",
                              text: "Item added to Cart",
                              icon: "success",
                              showConfirmButton: true,
                              confirmButtonColor: "#c96",
                              confirmButtonText: "View cart",
                              showCancelButton: true,
                              cancelButtonColor: "#fff",
                              cancelButtonText: "Continue Shopping",
                              customClass: {
                                  cancelButton: 'cancel-button-class',
                                  confirmButton:'confirm-button-class'
                              }
                          }).then((result) => {
                              if (result.isConfirmed) {
                                  window.location.href = "/cart";
                              }
                          });
                      } else if(response.data.success == false){
                          Swal.fire({
                              position: "center",
                              title: "Failed!",
                              text: "This item already in the cart",
                              icon: "info",
                              showConfirmButton: true,
                              confirmButtonColor: "#c96",
                              confirmButtonText: "View cart",
                              showCancelButton: true,
                              cancelButtonColor: "#fff",
                              cancelButtonText: "Continue Shopping",
                              customClass: {
                                  cancelButton: 'cancel-button-class',
                                  confirmButton:'confirm-button-class'
                              }
                          }).then((result) => {
                              if (result.isConfirmed) {
                                  window.location.href = "/cart";
                              }else{
                                window.location.href = "/products";
                              }
                          });
                      }
                  }).catch(function(error){
                      console.error('Error:', error);
              });
          }
      </script>
  <%- include('../layouts/users/footer', { path: '/wishlist' }) %>