<%- include('../layouts/admin/header', { title: 'Admin Panel', path: '/addUsers'}) %>

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Users</h2>
                <p>Add, edit or delete a users</p>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form action="" method="post">
                            <div class="mb-4">
                                <% if (typeof message !== 'undefined') { %>
                                    <p style="color: red; display: flex; justify-content: center; align-items: center;">
                                        <%= message %>
                                    </p> 
                                <% } %>
                                <label for="product_name" class="form-label">Name</label>
                                <input type="text" value="<%= formData.name %>"  placeholder="Type here" name="name" class="form-control" id="product_name" />
                                <span class="error-message" style="color: red;"><%= messages.name %></span>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Email</label>
                                <input type="email" value="<%= formData.email %>"  placeholder="Type here"  name="email" class="form-control"></input>
                                <span class="error-message" style="color: red;"><%= messages.email %></span>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Mobile</label>
                                <input type="text" value="<%= formData.mobile %>"  placeholder="Type here" name="mobile" class="form-control"></input>
                                <span class="error-message" style="color: red;"><%= messages.mobile %></span>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary" type="submit">Create User</button>
                            </div>
                        </form>
                    </div> 
                    <!-- .col// -->
                </div>
                <!-- .row // -->
            </div>
            <!-- card body .// -->
        </div>
        <!-- card .// -->
    </section>
            
<%- include('../layouts/admin/footer', { path: '/addUsers' }) %>


