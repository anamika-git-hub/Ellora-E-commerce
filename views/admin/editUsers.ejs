<%- include('../layouts/admin/header', { title: 'Admin Panel', path: '/users'}) %>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Users</h2>
            <p>Add, edit or delete a users</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form action="" method="post">
                        <div class="mb-4">
                            <% if (typeof message !== 'undefined') { %>
                                <p style="color: red; display: flex; justify-content: center; align-items: center;">
                                    <%= message %>
                                </p>
                            <% } %>
                            <label for="product_name" class="form-label">Name</label>
                            <input type="text" placeholder="Type here" name="name" value="<%= users.name %>" class="form-control" id="product_name" />
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Email</label>
                            <input placeholder="Type here" name="email" value="<%= users.email %>" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Mobile</label>
                            <input placeholder="Type here" name="mobile" value="<%= users.mobile %>" class="form-control" />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Edit User</button>
                        </div>
                        <div class="mb-4">
                            <input type="hidden" name="id" value="<%= users._id %>" />
                        </div>
                    </form>
                </div>
                <!-- .col// -->
            </div>
            <!-- .row // -->
        </div>
        <!-- card body .// -->
    </div>
    <!-- card .// -->
</section>

<%- include('../layouts/admin/footer', { path: '/editUsers' }) %>