<%- include('../layouts/admin/header', { title: 'Ellora Admin', path: '/productList'}) %>

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                    <div>
                        <a href="addProducts" class="btn btn-primary btn-sm rounded">Create new</a>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="">
                            <div class="col-lg-4 col-md-6 me-auto">
                                <input type="text" name="search" placeholder="Search..." class="form-control" id="inputThings" />
                            </div>
                        </form>
                        <br>
                        <div class="table-responsive">
                            <table id="tableId" class="table table-hover">
                                <thead >
                                    <tr>
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Category</th>
                                        <th scope="col" >Price</th>
                                        <th scope="col" >Stock</th>
                                        <th scope="col" >Description</th>
                                        <th scope="col" >Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  
                                    <% products.forEach(element => { %> 
               
                                    <tr>
                                        <td> 
                                            <a href="/detailes?id=<%=element._id%>">
                                                <img src="<%=element.image[0].url%>" class="img-sm img-thumbnail" alt="Item" />
                                            </a>
                                        </td>
                                        
                                            
                                        
                                        <td class="nameSearch"><%= element.name %></td>
                                        
                                        <td class="nameSearch"><%= element.categories.name %></td>
                                    
                                        <td><%= element.price %></td>
                                        <td><%= element.stock %></td>
                                        <td><%= element.description %></td>
                                    
                                        <td>
                                    
                                        <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                        <a href="/admin/editProducts?id=<%= element._id %>" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
                                            <%if(element.is_listed === true){%>
                                            <button class="btn btn-sm font-sm rounded text-white btn-success " onclick="listProduct(this,'<%=element._id%>') "> List </button>
                                            <%}else{ %>
                                            <button  class="btn btn-sm font-sm rounded text-white btn-danger " onclick="listProduct(this,'<%=element._id%>') ">  Unlist </button>
                                            <%} %>   
                                        </div>
                                        </td>
                                    
                                    </tr>
                                    <%}) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- table-responsive end -->
                    </div>
                    <!-- card-body end -->
                </div>
                <!-- card end -->
                <div class="pagination-area mt-30 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <% for(let j=1; j<=totalPages; j++){ %>
                            <li class="page-item <%= j === currentPage ? "active":" "%>"><a class="page-link" href="?page=<%= j%>"><%= j%></a></li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </section>
       
        <script>

            function listProduct(tag,productId){
        
                if(tag.innerText=='List'){
                    const confirmed = confirm("Are you sure you want to Unlist this product?");
                    if(confirmed){
                    tag.innerText='Unlist'
                    tag.style.background='red'
                    tag.style.color='white'}
                    
                }else if(tag.innerText == 'Unlist'){
                    const confirmed = confirm("Are you sure you want to list this product again?");
                    if(confirmed){
                    tag.innerText='List'
                    tag.style.background='green'
                    tag.style.color='black'
                    }
                   
                }
                fetch(`/admin/listProduct?productId=${productId}`)
            }
        </script>
  
  <%- include('../layouts/admin/footer', { path: '/productList' }) %>