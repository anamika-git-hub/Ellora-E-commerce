<%- include('../layouts/admin/header', { title: 'Admin Panel', path: '/editCategories'}) %>

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Categories</h2>
                        <p>Add, edit or delete a category</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="" method="post"  >
                                    <% if (typeof message !== 'undefined') { %>
                                        <p style="color: red; display: flex; justify-content: center; align-items: center;">
                                          <%= message %>
                                        </p>
                                        
                                      <% } %>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Name</label>
                                        <input type="text" placeholder="Type here" name="name" class="form-control" value="<%= category.name %>" id="product_name" />
                                    </div>
                                    <div class="mb-4">
                                        <input type="hidden" name="id"  value="<%= category._id %>"  />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <input placeholder="Type here" name="description"  value="<%= category.description %>" class="form-control"></input>
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Edit category</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- .col// -->
                        </div>
                        <!-- .row // -->
                    </div>
                    <!-- card body .// -->
                </div>
                <!-- card .// -->
            </section>
            <!-- content-main end// -->
            <footer class="main-footer font-xs">
                <div class="row pb-30 pt-15">
                    <div class="col-sm-6">
                        <script>
                            document.write(new Date().getFullYear());
                        </script>
                        &copy; Nest - HTML Ecommerce Template .
                    </div>
                    <div class="col-sm-6">
                        <div class="text-sm-end">All rights reserved</div>
                    </div>
                </div>
            </footer>
        </main>
        <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="assets/js/vendors/select2.min.js"></script>
        <script src="assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="assets/js/main.js?v=1.1" type="text/javascript"></script>
    </body>
</html>
